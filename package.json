{
    "name": "cdk-deployment-root",
    "private": true,
    "scripts": {
        "prepare": "husky install"
    },
    "devDependencies": {
        "husky": "^8.0.0",
        "lint-staged": "^15.0.0",
        "prettier": "^3.0.0"
    },
    "lint-staged": {
        "**/*.{ts,js,json,md,yml,yaml}": [
            "prettier --write"
        ],
        "iac/**/*.ts": [
            "npm exec --prefix iac -- eslint --fix"
        ],
        "**/*.py": [
            "black",
            "pylint"
        ]
    }
}