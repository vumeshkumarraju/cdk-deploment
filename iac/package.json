{
  "name": "iac",
  "version": "0.1.0",
  "bin": {
    "iac": "bin/iac.js"
  },
  "scripts": {
    "lint": "eslint 'lib/**/*.ts' 'bin/**/*.ts' --ignore-pattern '*.d.ts'",
    "format": "prettier --write 'lib/**/*.ts' 'bin/**/*.ts'",
    "prepare": "cd .. && husky install iac/.husky",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.py": [
      "black",
      "pylint"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.5",
    "aws-cdk": "2.1100.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.232.1",
    "constructs": "^10.0.0"
  }
}